{% extends 'base.html.twig' %}

{% block title %}Link index{% endblock %}

{% block body %}
    <h1>Link index</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Url</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for link in links %}
            <tr>
                <td>{{ link.id }}</td>
                <td>{{ link.title }}</td>
                <td>{{ link.url }}</td>
                <td>{{ link.description }}</td>
                <td>
                    <a href="{{ path('app_link_show', {'id': link.id}) }}">
                        Afficher
                    </a>
                    <a href="{{ path('app_link_edit', {'id': link.id}) }}">
                        Editer
                    </a>
                    <form action="{{ path('app_link_delete', {'id': link.id}) }}"
                        method="post"
                        class="delete-form"
                        data-link-title="{{ link.title }}"
                        style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ link.id) }}">
                        <input type="hidden" name="link_title" value="{{ link.title }}">
                        <button type="submit" class="delete-button" style="background: none; border: none; color: blue; text-decoration: underline; cursor: pointer;">
                            Supprimer
                        </button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5"> 
                    Pas de lien trouv√©
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <nav aria-label="Link pagination">
        <ul class="pagination justify-content-center">
            <li class="page-item {{ currentPage == 1 ? 'disabled' }}">
                <a class="page-link" href="{{ path('app_link_index', {page: currentPage - 1}) }}" {{ currentPage == 1 ? 'tabindex="-1" aria-disabled="true"' }}>
                    &lt;
                </a>
            </li>

            {% for page in 1..totalPages %}
                <li class="page-item {{ page == currentPage ? 'active' }}">
                    <a class="page-link" href="{{ path('app_link_index', {page: page}) }}">
                        {{ page }}
                        {% if page == currentPage %}
                            <span class="visually-hidden">(current)</span>
                        {% endif %}
                    </a>
                </li>
            {% endfor %}

            <li class="page-item {{ currentPage == totalPages ? 'disabled' }}">
                <a class="page-link" href="{{ path('app_link_index', {page: currentPage + 1}) }}" {{ currentPage == totalPages ? 'tabindex="-1" aria-disabled="true"' }}>
                    &gt;
                </a>
            </li>
        </ul>
    </nav>

    <a href="{{ path('app_link_new') }}">
        Ajouter un lien
    </a>
{% endblock %}
