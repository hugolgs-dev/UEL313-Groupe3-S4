{% extends 'base.html.twig' %}

{% block title %}Link index{% endblock %}

{% block body %}
    <h1 class="h1" >Liens</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>URL</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for link in links %}
            <tr>
                <td>{{ link.id }}</td>
                <td>{{ link.title }}</td>
                <td>{{ link.url }}</td>
                <td>{{ link.description }}</td>
                <td>
                    <a href="{{ path('app_link_show', {'id': link.id}) }}">
                        Afficher
                    </a>
                    <a href="{{ path('app_link_edit', {'id': link.id}) }}">
                        Editer
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5"> 
                    Pas de lien trouv√©
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_link_new') }}">
        Ajouter un lien
    </a>
{% endblock %}
